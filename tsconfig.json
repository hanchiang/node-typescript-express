{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": false, // Might be overly stringent if this is set to true. Exercise judgement here
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "config": ["config/*"],
      "controllers": ["controllers/*"],
      "db": ["db/*"],
      "middlewares": ["middlewares/*"],
      "models": ["models/*"],
      "routes": ["routes/*"],
      "utils": ["utils/*"],
      "types": ["types/*"]
    }
  },
  "include": ["src/**/*"]
}
