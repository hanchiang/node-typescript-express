{
  "name": "express-typescript-starter",
  "version": "0.1.0",
  "description": "A starting point for Node.js express apps with TypeScript",
  "repository": {
    "type": "git",
    "url": "https://github.com/Microsoft/TypeScript-Node-Starter"
  },
  "author": "Bowden Kelly",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "npm run eslint:check && npm run prettier:check"
    }
  },
  "lint-staged": {
    "*.+(ts|js)": [
      "eslint --fix",
      "git add"
    ],
    "*.+(json|md)": [
      "prettier --write",
      "git add"
    ]
  },
  "scripts": {
    "start": "npm run serve",
    "build": "npm run build-ts && npm run eslint:fix && npm run prettier:fix",
    "serve": "node dist/bin/www.js",
    "test": "jest",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "prettier:fix": "prettier --write \"**/*.+(ts|js|json)\"",
    "prettier:check": "prettier --check \"**/*.+(ts|js|json)\"",
    "eslint:fix": "tsc --noEmit && eslint \"**/*.{js,ts}\" --fix",
    "eslint:check": "tsc --noEmit && eslint \"**/*.{js,ts}\"",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "debug": "npm run watch-debug",
    "serve-debug": "ts-node-dev src/server.ts",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.3",
    "helmet": "4.2.0",
    "lusca": "^1.6.1",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/body-parser": "^1.17.1",
    "@types/concurrently": "^5.2.1",
    "@types/eslint": "^6.8.1",
    "@types/express": "^4.17.7",
    "@types/helmet": "4.0.0",
    "@types/jest": "^26.0.23",
    "@types/lusca": "^1.6.2",
    "@types/node": "12.19.3",
    "@types/sinon": "9.0.8",
    "@types/supertest": "^2.0.10",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^2.3.1",
    "@typescript-eslint/parser": "^2.3.1",
    "concurrently": "^5.0.0",
    "eslint": "^6.4.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "jest": "^27.0.1",
    "lint-staged": "^10.2.11",
    "nyc": "^15.1.0",
    "prettier": "^2.0.5",
    "sinon": "9.2.1",
    "source-map-support": "^0.5.19",
    "supertest": "^4.0.2",
    "ts-jest": "^27.0.0",
    "ts-node": "^8.10.2",
    "ts-node-dev": "^1.1.1",
    "typescript": "4.0.5"
  }
}
